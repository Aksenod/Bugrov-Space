// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  avatarColor  String?  @default("indigo")
  role         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  projects Project[]
  agents   Agent[]
  messages Message[]
  payments Payment[]

  isPaid                Boolean   @default(false)
  subscriptionExpiresAt DateTime?
}

model Payment {
  id          String   @id @default(cuid())
  userId      String
  amount      Decimal
  currency    String   @default("RUB")
  status      String // pending, succeeded, canceled
  yookassaId  String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([yookassaId])
}

model ProjectType {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects   Project[]
  agentTypes ProjectTypeAgentProjectType[]
}

model Project {
  id            String   @id @default(cuid())
  name          String
  description   String?
  userId        String
  projectTypeId String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Restrict)
  projectType ProjectType @relation(fields: [projectTypeId], references: [id], onDelete: Restrict)
  agents      Agent[]

  @@index([userId])
  @@index([userId, createdAt]) // Оптимизация для запросов с сортировкой по createdAt
}

model Agent {
  id                  String   @id @default(cuid())
  userId              String
  projectId           String
  projectTypeAgentId  String?
  name                String
  description         String   @default("")
  systemInstruction   String   @default("")
  summaryInstruction  String   @default("")
  model               String   @default("gpt-5-mini")
  role                String?  @default("")
  order               Int      @default(0)
  isHiddenFromSidebar Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Restrict)
  project          Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectTypeAgent ProjectTypeAgent? @relation(fields: [projectTypeAgentId], references: [id], onDelete: Cascade)
  messages         Message[]
  files            File[]

  @@index([userId])
  @@index([projectId])
  @@index([userId, projectId])
  @@index([projectTypeAgentId])
}

model ProjectTypeAgent {
  id                  String   @id @default(cuid())
  name                String
  description         String   @default("")
  systemInstruction   String   @default("")
  summaryInstruction  String   @default("")
  model               String   @default("gpt-5-mini")
  role                String?  @default("")
  isHiddenFromSidebar Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  projectTypes ProjectTypeAgentProjectType[]
  agents       Agent[]

  @@index([name])
}

model ProjectTypeAgentProjectType {
  id                 String   @id @default(cuid())
  projectTypeAgentId String
  projectTypeId      String
  order              Int      @default(0)
  createdAt          DateTime @default(now())

  projectTypeAgent ProjectTypeAgent @relation(fields: [projectTypeAgentId], references: [id], onDelete: Cascade)
  projectType      ProjectType      @relation(fields: [projectTypeId], references: [id], onDelete: Cascade)

  @@unique([projectTypeAgentId, projectTypeId])
  @@index([projectTypeAgentId])
  @@index([projectTypeId])
}

model Message {
  id        String   @id @default(cuid())
  agentId   String
  userId    String?
  role      String
  text      String
  createdAt DateTime @default(now())

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)
  user  User? @relation(fields: [userId], references: [id])

  @@index([agentId])
  @@index([agentId, createdAt]) // Оптимизация для запросов с сортировкой по createdAt
}

model File {
  id                 String   @id @default(cuid())
  agentId            String? // Может быть null, если используется projectTypeAgentId
  projectTypeAgentId String? // Опциональное поле для связи с ProjectTypeAgent
  name               String
  mimeType           String
  content            String // Base64 or text content
  dslContent         String? // Generated DSL content
  verstkaContent     String? // Generated HTML content
  isKnowledgeBase    Boolean  @default(false) // true = база знаний агента, false = документ проекта
  createdAt          DateTime @default(now())

  agent             Agent?             @relation(fields: [agentId], references: [id], onDelete: Cascade)
  prototypeVersions PrototypeVersion[]

  @@index([agentId])
  @@index([projectTypeAgentId])
  @@index([agentId, isKnowledgeBase])
  @@index([projectTypeAgentId, isKnowledgeBase])
  @@index([agentId, createdAt]) // Оптимизация для запросов с сортировкой по createdAt
  @@index([projectTypeAgentId, createdAt])
}

model PrototypeVersion {
  id             String   @id @default(cuid())
  fileId         String
  versionNumber  Int
  dslContent     String? // Generated DSL content for this version
  verstkaContent String? // Generated HTML content for this version
  createdAt      DateTime @default(now())

  file File @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@unique([fileId, versionNumber])
  @@index([fileId])
  @@index([fileId, versionNumber])
}

model GlobalPrompt {
  id        Int      @id @default(1)
  content   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("GlobalPrompt")
}

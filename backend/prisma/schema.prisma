// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  avatarColor  String?  @default("indigo")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  projects Project[]
  agents   Agent[]
  messages Message[]
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Restrict)
  agents  Agent[]
}

model Agent {
  id                 String   @id @default(cuid())
  userId             String
  projectId          String
  name               String
  description        String   @default("")
  systemInstruction  String   @default("")
  summaryInstruction String   @default("")
  model              String   @default("gpt-5.1")
  role               String?  @default("")
  order              Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  messages  Message[]
  files     File[]
}

model Message {
  id        String   @id @default(cuid())
  agentId   String
  userId    String?
  role      String
  text      String
  createdAt DateTime @default(now())

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)
  user  User? @relation(fields: [userId], references: [id])
}

model File {
  id             String   @id @default(cuid())
  agentId        String
  name           String
  mimeType       String
  content        String   // Base64 or text content
  isKnowledgeBase Boolean @default(false)  // true = база знаний агента, false = документ проекта
  dslContent     String?  // Результат работы агента DSL
  verstkaContent String?  // Результат работы агента Верстка
  createdAt      DateTime @default(now())

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)
}

